<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingsActivity">

    <ImageView
        android:id="@+id/ivPoster"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@id/tvOrderNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ticket3" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="110dp"
        android:layout_toEndOf="@+id/ivPoster"
        android:textColor="@color/cyan_786"
        android:textSize="28sp"
        tools:text="@string/movie_title" />

<TextView
        android:id="@+id/tvShowingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="5dp"
        android:layout_alignStart="@id/tvTitle"
        android:layout_toEndOf="@+id/ivPoster"
        android:textSize="15sp"
        android:textColor="@color/cyan_786"
        tools:text="19 Sep 2022"/>
    <TextView
        android:id="@+id/tvShowingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginStart="10dp"
        android:layout_alignTop="@id/tvShowingDate"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/tvShowingDate"
        android:textColor="@color/cyan_786"
        tools:text="7:00pm"/>
    <TextView
        android:id="@+id/tvOrderNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvShowingDate"
        android:layout_alignStart="@id/tvTitle"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/ivPoster"
        android:textColor="@color/cyan_786"
        tools:text="#A10234"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ivPoster"
        android:layout_toEndOf="@id/ivPoster"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/listDivider"/>


</RelativeLayout>